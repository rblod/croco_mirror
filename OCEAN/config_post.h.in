#ifndef CMAKE_CROCO_CONFIG_PARALLELISM_H
#define CMAKE_CROCO_CONFIG_PARALLELISM_H

/*
To ensure we do not redefine
*/
#undef OPENMP
#undef OPENACC
#undef MPI

/*
Enable parallelism modes
*/
#cmakedefine OPENMP
#cmakedefine OPENACC
#cmakedefine MPI

/*
Currently support only one at a time
Remark: If will fail if we redefine a second time HAS_PARA_MODE
*/
#ifdef OPENMP
#define HAS_PARA_MODE
#endif
#ifdef OPENACC
#define HAS_PARA_MODE
#endif
#ifdef MPI
#define HAS_PARA_MODE
#endif

/*
Enable AGRIF
*/
#undef AGRIF
#cmakedefine AGRIF

#endif
